# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/habit_tracker"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=habit_tracker

# ==============================================
# BACKEND CONFIGURATION
# ==============================================
PORT=3011
CORS_ORIGIN=http://localhost:3011

# JWT - Generate a secure secret at https://jwtsecrets.com/
JWT_SECRET=your-jwt-secret-here

# Google OAuth - Get credentials from https://console.cloud.google.com/
# Add http://localhost:3011/api/auth/google/callback to authorized redirect URIs
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3011/api/auth/google/callback

# Frontend URL (same as backend in single-container setup)
FRONTEND_URL=http://localhost:3011

# ==============================================
# FRONTEND CONFIGURATION (Vite requires VITE_ prefix)
# ==============================================
VITE_API_URL=http://localhost:3011
